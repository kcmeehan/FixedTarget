<?xml version="1.0" encoding="utf-8" ?>

<job maxFilesPerProcess="25" filesPerHour="20" simulateSubmission="false" fileListSyntax="xrootd">

  <stdout URL="file:/star/data05/scratch/cflores/DavisDSTs/AuAl_3_0/logs/DataExtract_$JOBINDEX.out" />
  <stderr URL="file:/star/data05/scratch/cflores/DavisDSTs/AuAl_3_0/logs/DataExtract_$JOBINDEX.err" />

  <Generator><Location>
      /star/data05/scratch/cflores/DavisDSTs/AuAl_3_0/sched/
  </Location></Generator>

  <input URL="catalog:star.bnl.gov?filetype=daq_reco_MuDst,trgsetupname=AuAu7_production,production=P10ih,filename~physics_adc,sanity=1,tpx=1 -distinct" nFiles="100"  />

  <SandBox installer="ZIP">
    <Package name="sched">
      <File>file:/star/u/cflores/StDataCollector/RunStDataCollectorMaker.C</File>
      <File>file:/star/u/cflores/StDataCollector/StRoot/</File>
    </Package>
  </SandBox>

  <command>
  
    starver SL15e 
    
    cons

    <!-- Selecting events on the 2010/2011 beampipe -->
    set minVr = 2            
    set maxVr = 5            
    set minVz = -200         
    set maxVz = -150         
    set minVx = -999         
    set maxVx = -999         
    set minVy = -999         
    set maxVy = -999         
    set minPrimaryTracks = 2 
 
    set nEvents = 999999
    root4star -q -b RunStDataCollectorMaker.C\($nEvents,\"$FILELIST\",\"$SCRATCH/\",\"$JOBID\",$minVr,$maxVr,$minVz,$maxVz,$minVx,$maxVx,$minVy,$maxVy,$minPrimaryTracks\)

  </command>
  
  <output fromScratch="*.root" toURL="file:/star/data05/scratch/cflores/DavisDSTs/AuAl_3_0/data/"/>
  
</job>
