<?xml version="1.0" encoding="utf-8" ?>

<job maxEvents="150000"  simulateSubmission="true" fileListSyntax="xrootd">

  <stdout URL="file:/star/data05/scratch/cflores/DavisDSTs/AuAl_3_9/logs/DataExtract_$JOBINDEX.out" />
  <stderr URL="file:/star/data05/scratch/cflores/DavisDSTs/AuAl_3_9/logs/DataExtract_$JOBINDEX.err" />

  <Generator><Location>
      /star/data05/scratch/cflores/DavisDSTs/AuAl_3_9/sched/
  </Location></Generator>

  <input URL="catalog:star.bnl.gov?filetype=daq_reco_MuDst,trgsetupname=production_15GeV_2014,production=P14ii,filename~physics,sanity=1,tpx=1,storage!=HPSS,runnumber>15053000 -distinct" nFiles="all"  />

  <SandBox installer="ZIP">
    <Package name="sched">
      <File>file:/star/u/cflores/StDataCollector/RunStDataCollectorMaker.C</File>
      <File>file:/star/u/cflores/StDataCollector/StRoot/</File>
    </Package>
  </SandBox>

  <command>
  
    starver SL14i

    cons

    <!-- Selecting events on the 2014 beampipe -->
    set minVr = 0.5            
    set maxVr = 5            
    set minVz = -200         
    set maxVz = -150         
    set minVx = -999         
    set maxVx = -999         
    set minVy = -999         
    set maxVy = -999         
    set beamSpotX = 0.0
    set beamSpotY = -0.9
    set minPrimaryTracks = -999 
    set maxVertices = 1
 
    set nEvents = 999999
    root4star -q -b RunStDataCollectorMaker.C\($nEvents,\"$FILELIST\",\"$SCRATCH/\",\"$JOBID\",$minVr,$maxVr,$minVz,$maxVz,$minVx,$maxVx,$minVy,$maxVy,$beamSpotX,$beamSpotY,$minPrimaryTracks,$maxVertices\)

  </command>
  
  <output fromScratch="*.root" toURL="file:/star/data05/scratch/cflores/DavisDSTs/AuAl_3_9/data/"/>
  
</job>
